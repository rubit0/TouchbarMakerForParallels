<Window x:Class="TouchbarMaker.Views.ChangeNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchbarMaker.Views"
        mc:Ignorable="d"
        Title="Change Name" Height="140" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <Label MinWidth="50">Name</Label>
                <TextBox x:Name="NameInput" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" MinWidth="210" 
                         Text="{Binding ElementName, Mode=TwoWay}" 
                         KeyDown="OnKeyInTextEntryPressed" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0 10 10 0">
                <Button HorizontalAlignment="Right" Click="Ok_Button_Click" Content="Save" MinWidth="50" Margin="0 0 10 0"/>
                <Button HorizontalAlignment="Right" Click="Cancel_Button_Click" Content="Cancel" MinWidth="50" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
